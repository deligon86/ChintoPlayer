<AlbumView>:
    MDScreenManager:
        id: view_mgr
        MDScreen:
            name: 'albums_list'
            MDBoxLayout:
                orientation: 'vertical'
                MDBoxLayout:
                    size_hint_y: None
                    height: '52dp'
                    MDLabel:
                        text: "Albums"
                        font_style: 'Display'
                        role: 'small'

                MDBoxLayout:
                    MDScrollView:
                        bar_width: dp(10)
                        do_scroll_x: False
                        ResponsiveGrid:
                            id: album_grid
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: '5dp'
                            padding: '5dp'

        MDScreen:
            name: 'albums'
            MDBoxLayout:
                orientation: 'vertical'
                MDBoxLayout:
                    # banner
                    size_hint_y: .6
                    MDFloatLayout:
                        size_hint_x: .6
                        MDIconButton:
                            icon: 'chevron-left'
                            on_release: view_mgr.current = 'albums_list'
                            pos_hint: {'center_x': .1, 'center_y': .9}
                        FitImage:
                            id: album_cover
                            pos_hint: {'center_x': .5, 'center_y': .5}
                    MDBoxLayout:
                        # details
                        orientation: 'vertical'
                        MDLabel:
                            id: album_name
                            font_size: '26sp'
                            theme_font_size: 'Custom'
                        MDLabel:
                            id: album_songs_count
                        MDLabel:
                            id: album_duration

                RecyclerView:
                    id: album_content

<AlbumsItem>:
    orientation: 'vertical'
    size_hint: None, None
    radius: 10

    FitImage:
        id: image
        radius: [root.radius[0], root.radius[1], 0, 0]

    CommonLabel:
        shorten: True
        text: root.album
        size_hint_y: .2
        padding: [10, 0, 0, 5]
        radius: [0, 0, root.radius[-2], root.radius[-1]]
