<SettingsView>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: '10dp'
        padding: '5dp'
        MDBoxLayout:
            size_hint_y: None
            height: '52dp'
            MDLabel:
                text: "Settings"
                font_style: 'Display'
                role: 'small'

        MDScrollView:
            MDBoxLayout:
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: '5dp'
                padding: '10dp'
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: '100dp'
                    MDLabel:
                        size_hint_y: None
                        height: '52dp'
                        text: 'Theme'
                        theme_font_size: 'Custom'
                        font_size: '25sp'

                    MDBoxLayout:
                        size_hint_x: None
                        width: '250dp'
                        padding: '5dp'
                        ThemeSelection:
                            theme: 'Light'
                            select_callback: root.set_theme

                        ThemeSelection:
                            theme: 'Dark'
                            select_callback: root.set_theme
