#: import roulette_scrollEffect kivymd.effects.roulettescroll.roulettescroll.RouletteScrollEffect
<MainViewSideBar>:
    orientation: "vertical"
    radius: 0
    MDScrollView:
        effect_cls: roulette_scrollEffect
        MDBoxLayout:
            id: container
            size_hint_y: None
            height: self.minimum_height
            spacing: '10dp'
            orientation: 'vertical'
            MainViewSideBarItem:
                icon: "home"
                text: "Home"

            MainViewSideBarItem:
                icon: "music-note"
                text: "Songs"

            MainViewSideBarItem:
                icon: "album"
                text: "Albums"

            MainViewSideBarItem:
                icon: "playlist-music"
                text: "Playlists"

            MainViewSideBarItem:
                icon: "cog"
                text: "Settings"


<MainViewSideBarItem>:
    size_hint_y: None
    height: '48dp'
    radius: 0
    MDBoxLayout:
        size_hint_x: None
        width: '4dp'
        MDLabel:
            id: marker
            size_hint: None, None
            size: [0, 0]
            theme_md_bg_color: 'Custom'
    MDFloatLayout:
        size_hint: None, None
        width: root.height + 10
        height: root.height
        MDIcon:
            icon: root.icon
            pos_hint: {'center_x': .5, 'center_y': .5}

    CommonLabel:
        text: root.text
        halign: "left"
