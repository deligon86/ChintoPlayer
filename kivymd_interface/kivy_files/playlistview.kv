<PlaylistView>:
    MDBoxLayout:
        spacing: '10dp'
        padding: '5dp'
        MDBoxLayout:
            orientation: 'vertical'
            # playlist items
            size_hint_x: .4
            padding: [0, 20, 0, 20]
            MDBoxLayout:
                size_hint_y: None
                height: '48dp'
                MDLabel:
                    text: "Playlists"
                    font_style: 'Display'
                    role: 'small'
            PlaylistContainer:
                id: playlist_container
                playlist_callback: root.playlist_open_callback

            MDBoxLayout:
                size_hint_y: None
                height: '56dp'
                padding: '5dp'
                PlaylistCreateButton:
                    icon: 'plus'
                    text: 'New Playlist'
                    on_release: root.open_create_playlist_dialog()

        MDCard:
            # playlist songs
            radius: '5dp'
            focus_behavior: False
            RecyclerView:
                id: playlist_content
                key_viewclass: 'viewclass'
                MDRecycleBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    spacing: '5dp'
                    default_size: None, '56dp'
                    default_size_hint: 1, None
                    height: self.minimum_height

        MDBoxLayout:
            orientation: "vertical"
            spacing: '5dp'
            size_hint_x: .4
            padding: [0, 20, 0, 20]
            MDBoxLayout:
                size_hint_y: None
                height: '48dp'
                # search field
                MDTextField:
                    MDTextFieldLeadingIcon:
                        icon: 'magnify'
                    MDTextFieldHintText:
                        text: 'search playlist'

            RecyclerView:
                id: playlist_search_content
                recycler_type: 'boxlayout'
                key_viewclass: 'viewclass'
